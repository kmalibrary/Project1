<div class="row">
    <% genreBooks.forEach(function (book) { %>
        <div class="col-sm-6 col-md-4 col-lg-3" align="center">
            <div class="book-card" style="cursor: pointer">
                <% if(book.is_popular){ %>
                    <div class="is-popular"> Популярне</div>
                <% } %>
                <img src="<%= book.icon %>" class="card-img">
                <div class="description">
                    <div class="card-name"><%= book.title %></div>
                    <div class="card-author"><%= book.author %></div>
                    <form method="post" action="/genreBook">
                        <button type="submit" class="btn btn-book" ><i class="fa fa-book"> Детальніше</i></button>
                        <input type="hidden" name="Name" value="<%= book.title %>"/>
                    </form>
                </div>

            </div>
        </div>
    <% }) %>
</div>
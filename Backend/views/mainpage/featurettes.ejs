<!-- Three columns of text below the carousel -->
<div class="row">
    <% genresList.forEach(function(genre){%>
    <div class="col-lg-4 col-md-6">
        <div class="genre" onclick="location.href='#';">
            <img src="<%= genre.image %>" class="bd-placeholder-img rounded-circle "
                 width="180" height="140" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"
                 aria-label="Horrors"><title><%= genre.name %></title><rect width="100%" height="100%" fill="#777"/>
            <h2 class="genre" ><%=genre.name %></h2>
            </img>
        </div><!--genre-->
    </div><!-- /.col-lg-4 -->
    <%});%>
</div><!-- /.row -->


<!-- START THE FEATURETTES -->

<hr class="featurette-divider">

<div class="row featurette f-borders">
    <div class="col-md-7">
        <h2 class="featurette-heading">Залишайся з нами <span class="text-muted">Ти проведеш свій час з насолодою</span></h2>
        <p class="lead">
            Ми, студенти Києво-Могилянської академії, раді тебе вітати в цьому затишному куточку прихистку онлайн книжок.
            Підтримай наш проект та надішли нам свої враження (подробиці у відділі privacy)
        </p>
    </div>
    <div class="col-md-5 col-md">
        <img src="assets/images/bookshelves.jpg" class="bd-placeholder-img featurette-image img-fluid mx-auto"
             width="500" height="500" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"
             aria-label="Library"><title>Bookshelves</title><rect width="100%" height="100%" fill="#eee"/></img>
    </div>
</div>


<hr class="featurette-divider">
<div id="googleMap" class="google-maps location">Location</div>
<hr class="featurette-divider">
<!-- /END THE FEATURETTES -->

